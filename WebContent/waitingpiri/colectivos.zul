<?page title="Waiting Piri- Web" contentType="text/html;charset=UTF-8"?>
<zk>
	<style src="/css/style.css" />
	<window border="0" width="100%" height="100%"
	apply="org.zkoss.bind.BindComposer"
		viewModel="@id('vm') @init('com.waitingpiri.gestion.ColectivoViewModel')">
		<hbox height="50px" width="100%" sclass="cabecera rounded"
			align="center">
			<label sclass="titulo">Administrar Colectivos</label>
			<div hflex="true"/>
			<button sclass="btn-success" iconSclass="z-icon-arrow-left"
				href="menuprincipal.zul">
				Atrás..
			</button>
			
		</hbox>
		<vbox width="100%" vflex="true" pack="center" align="center" style="padding:10px">
			<hbox vflex="true" width="100%">
				<listbox vflex="true" width="100%" sclass="rounded"
				model="@load(vm.colectivos)"
				selectedItem="@bind(vm.selectedColectivo)"
				visible="@load(!vm.modoEdicion)">
					<listhead style="text-align:center">
						<listheader label="ID" align="right" style="text-align:center" />
						<listheader label="NRO COLECTIVO" align="right" style="text-align:center" />
						<listheader label="NRO CHAPA" align="left" style="text-align:center"/>	
					</listhead>
					<auxhead>
						<auxheader>
							<hlayout>
								<toolbarbutton iconSclass="z-icon-filter"/>
								<textbox hflex="true" placeholder="Buscar.."
								value="@bind(vm.filterID)" instant="true"/>
							</hlayout>
						</auxheader>
					
						<auxheader>
							<hlayout>
								<toolbarbutton iconSclass="z-icon-filter" disabled="true"/>
								<textbox hflex="true" placeholder="Buscar.." 
								value="@bind(vm.filterNROCOL)" instant="true"/>
							</hlayout>
						</auxheader>
						<auxheader>
							<hlayout>
								<toolbarbutton iconSclass="z-icon-filter" disabled="true"/>
								<textbox hflex="true" placeholder="Buscar.."
								value="@bind(vm.filterCHAPA)" instant="true" />
							</hlayout>
						</auxheader>
					</auxhead>
					<template name="model">
						<listitem>
							<listcell label="@load(each.id)"/>
							<listcell label="@load(each.nroColec)"/>
							<listcell label="@load(each.nroChapa)"/>
						</listitem>
					</template>					
					<listfoot>
						<listfooter span="3" align="left">
							<hlayout>
								<label value="@load(vm.colectivos.size())" sclass="field"/>
								<label value="ítems" sclass="field"/>
							</hlayout>
						</listfooter>
					</listfoot>
				</listbox>
				<vlayout vflex="true">
					<grid vflex="true" sclass="rounded">
						<auxhead>
							<auxheader colspan="2"
								label="Ficha Colectivo" style="text-align:center">
							</auxheader>
						</auxhead>
						<columns>
							<column width="30%" />
							<column />
						</columns>
						<rows>
							<row>
								<label sclass="field" value="ID:" />
								<intbox readonly="true"
								value="@load(vm.selectedColectivo.id)"/>
							</row>
							<row>
							<hlayout valign="middle">
								<label sclass="field" value="NRO COLECTIVO:"/>
								<label sclass="required">*</label>								
								</hlayout>	
								<textbox hflex="true"
								value="@load(vm.selectedColectivo.nroColec)"
								readonly="@load(!vm.modoEdicion)"
									constraint="no empty"/>
								
							</row>
							<row>
							<hlayout valign="middle">
								<label sclass="field" value="NRO CHAPA:"/>
								<label sclass="required">*</label>								
								</hlayout>
								<textbox hflex="true"
								value="@load(vm.selectedColectivo.nroChapa)"
								readonly="@load(!vm.modoEdicion)"
									constraint="no empty"/>
							</row> 
							<row>
							  <hlayout valign="middle">
								<label sclass="field" value="NRO CHASIS:"/>
								<label sclass="required">*</label>								
								</hlayout>
								<textbox hflex="true"
								value="@load(vm.selectedColectivo.nroChasis)"
								readonly="@load(!vm.modoEdicion)"
									constraint="no empty"/>
							</row>
						</rows>
					</grid>	
					<hlayout>
						<button sclass="btn-success" width="130px"
							iconSclass="z-icon-plus"
							disabled="@load(!vm.nuevoEnabled)"
							onClick="@command('nuevo')">
							Nuevo
						</button>
						<button sclass="btn-success" width="130px"
							iconSclass="@load(vm.modoEdicion? 'z-icon-times' : 'z-icon-pencil')" style="background-color:#008080"
							onClick="@command('editar')"
							label="@load(vm.modoEdicion? 'Cancelar' : 'Editar')"
							disabled="@load(!vm.editarEnabled)">
						</button>
						<button sclass="btn-success" width="130px"
							iconSclass="z-icon-floppy-o"
							disabled="@load(!vm.guardarEnabled)"
							onClick="@command('guardar')">
							Guardar
						</button>
						<button sclass="btn-success" width="130px"
							iconSclass="z-icon-trash-o"
							disabled="@load(!vm.eliminarEnabled)">
							Eliminar
						</button>
					</hlayout>
				</vlayout>
				</hbox>
			</vbox>
			<hbox height="50px" width="100%" sclass="cabecera rounded">
		</hbox>
</window>
</zk>